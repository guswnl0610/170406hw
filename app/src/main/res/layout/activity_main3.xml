<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menupan"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="7dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_span="2"
        android:background="#8bb16e"
        android:gravity="center"
        android:padding="10dp"
        android:text="선택한 맛집 정보입니다."
        android:textColor="#fff7f7"
        android:textSize="20dp" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#dddbedd7">
        <TableRow
            android:layout_marginTop="20dp"
            android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtname"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:layout_weight="1"
                android:gravity="center"
                android:text="이름"
                android:textSize="18dp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow android:padding="3dp">
            <ImageView
                android:id="@+id/imgno"
                android:layout_width="50dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/chicken" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/etmenu1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="메뉴1(가격)"
                    android:padding="3dp" />
                <TextView
                    android:id="@+id/etmenu2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="메뉴2(가격)"
                    android:padding="3dp" />
                <TextView
                    android:id="@+id/etmenu3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="메뉴3(가격)"
                    android:padding="3dp" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp"
            android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tel:"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:padding="3dp"
                android:text="전화번호"
                android:textColor="#ff0000" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/stat_sys_phone_call_forward" />
        </TableRow>
        <TableRow android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Homepage:"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:padding="3dp"
                android:text="홈페이지주소"
                android:textColor="#0000ff" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/btn_star_big_on" />
        </TableRow>
        <TableRow android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="등록일:" />
            <TextView
                android:id="@+id/tvRegdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:paddingLeft="20dp"
                android:text="등록일자" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="뒤로가기" />
    </LinearLayout>
</LinearLayout>